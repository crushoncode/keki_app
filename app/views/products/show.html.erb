<p id="notice"><%= notice %></p>

<section>
<p>
    <% if @product.image_url.nil? %>
    <p> No image uploaded </p>
    <% else %>
    <%= image_tag @product.image_url, width: 200 %>
    <% end %>
</p>

<p>
  <strong><%= @product.product_name %></strong>
</p>

<p>
  <%= @product.description %>
</p>

<p>
  PRICE(AUD):
  <%= @product.price %> <br>
</p>
<p>
  QUANTITY:
  <%= @product.quantity_available %>
</p>

<p>
  ADDRESS:
  <%= @product.user.profile.address %>
<p>
  NO LONGER SELLING:
  <%= @product.no_longer_selling %>
</p>


<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  </article>

  <%= hidden_field_tag 'amount', @product.price %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= @product.price %>%"
          data-locale="auto"></script>
<% end %>

<%# <p>
<button class="pay_button">BUY NOW</button>
</p> %>
</section>



<div class='footer'>
<%= link_to 'Order', new_order_path(@order) %> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
