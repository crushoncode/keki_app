    </div>
  <% end %>

  <div class="field">
    <%= form.label :seller_id %>
    <%= form.number_field :seller_id %>
  </div>

  <div class="field">
    <%= form.label :product_name %>
    <%= form.text_field :product_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :image_data %>
    <%= form.text_area :image_data %>
  </div>

  <div class="field">
    <%= form.label :quantity_available %>
    <%= form.number_field :quantity_available %>
  </div>

  <div class="field">
    <%= form.label :no_longer_selling %>
    <%= form.datetime_select :no_longer_selling %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
